@model BMI.Models.UserResult 
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-lg-4 col-md-4" style="padding-top:39px;">

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Results</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    <a href="#" class="list-group-item">
                        <h4 class="list-group-item-heading">Fat Percentage</h4>
                        <p class="list-group-item-text">@Model.FatPerc %</p>
                    </a>
                    <a href="#" class="list-group-item">
                        <h4 class="list-group-item-heading">Body Type</h4>
                        <p class="list-group-item-text">@Model.BFResult</p>
                    </a>
                    <a href="#" class="list-group-item">
                        <h4 class="list-group-item-heading">Goal</h4>
                        <p class="list-group-item-text">@Model.Message calories to reach @Model.TargetWeight Kg</p>
                    </a>
                </div>
                
                @*<div style="display:inline-flex">
                    <h4 style="color:#75caeb">:  </h4>
                    <h4>@Model.Weight</h4>
                </div>

                
                <h4>Fat percentage: @Model.FatPerc</h4>
                <h4>Result: @Model.BFResult</h4>
                <h4>To reach target: @Model.Message</h4>*@
                
            </div>
        </div>

    
    </div>


    
</div>
